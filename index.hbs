{{!< default}}

{{#foreach posts}}
    <article class="{{post_class}}">
        <main>
            <header {{#if image}}class="has_image" style="background-image: url({{image}})"{{/if}}>
                <h2><a href="{{url}}">{{{title}}}</a></h2>
            </header>
            <summary>
                {{content}}
            </summary>
            <footer>
                <p>
                    By {{author}} on
                    {{!-- {{tags}} --}}
                    <time datetime="{{date format='YYYY-MM-DD'}}">
                        {{date format="DD MMMM YYYY"}}
                    </time>
                </p>
            </footer>
        </main>
    </article>
{{/foreach}}
